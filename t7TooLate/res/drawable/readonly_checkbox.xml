<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- checked -->
    <item android:drawable="@drawable/btn_check_on" android:state_checked="true"><color android:color="@android:color/black" />
    </item>

    <!-- unchecked -->
    <item android:drawable="@drawable/btn_check_off" android:state_checked="false"><color android:color="@android:color/black" />
    </item>

    <!-- on focus -->
    <item android:drawable="@drawable/btn_check_on" android:state_focused="true"><color android:color="@android:color/black" />
    </item>

    <!-- default -->
    <item android:drawable="@drawable/btn_check_off"><color android:color="@android:color/black" />
    </item>

</selector>