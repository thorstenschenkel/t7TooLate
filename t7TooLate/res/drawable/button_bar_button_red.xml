<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/btn_red_disabled_background" />

            <stroke android:width="2dp" android:color="@color/btn_red_disabled_background" />
        </shape></item>
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/btn_red_pressed_background" />

            <stroke android:width="2dp" android:color="@color/btn_red_pressed_background" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/btn_red_background" />

            <stroke android:width="2dp" android:color="@color/btn_red_background" />
        </shape></item>

</selector>