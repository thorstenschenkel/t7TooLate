<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/buttonWeekPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_bar_button"
        android:contentDescription="@string/picker_prev_week"
        android:minHeight="@dimen/week_peek_button_size"
        android:minWidth="@dimen/week_peek_button_size"
        android:src="@drawable/ic_previous_small" />

    <TextView
        android:id="@+id/textViewWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonWeekPrev"
        android:layout_alignTop="@+id/buttonWeekPrev"
        android:layout_toRightOf="@+id/buttonWeekPrev"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/analysis_dummy_week" />

    <ImageButton
        android:id="@+id/buttonWeekNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonWeekPrev"
        android:layout_alignTop="@+id/buttonWeekPrev"
        android:layout_toRightOf="@+id/textViewWeek"
        android:background="@drawable/button_bar_button"
        android:contentDescription="@string/picker_next_week"
        android:minHeight="@dimen/week_peek_button_size"
        android:minWidth="@dimen/week_peek_button_size"
        android:src="@drawable/ic_next_small" />

    <ImageButton
        android:id="@+id/buttonWeekThis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonWeekPrev"
        android:layout_alignTop="@+id/buttonWeekPrev"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/buttonWeekNext"
        android:background="@drawable/button_bar_button"
        android:contentDescription="@string/picker_this_week"
        android:minHeight="@dimen/week_peek_button_size"
        android:minWidth="@dimen/week_peek_button_size"
        android:src="@drawable/ic_today_small" />

</RelativeLayout>