<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical" >
    
    <View
        android:id="@+id/viewTopBorder"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@android:color/holo_purple" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/subtitle_text"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/capture_padding_x"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/textViewCaptureDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/connection_time_padding_right"
            android:singleLine="true"
            android:text="@string/analysis_dummy_date_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/subtitle_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewCaptureDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingLeft="@dimen/capture_padding_x"
            android:paddingRight="@dimen/capture_padding_x"
            android:singleLine="true"
            android:text="@string/analysis_dummy_delay"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/subtitle_background"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textViewConnectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/connection_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewConnectionNameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/connection_name"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/imageViewConnectionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/connection_type_hint"
                android:src="@drawable/ct_train" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewConnectionStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="@string/connection_start"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewConnectionStartStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="40dp"
                android:singleLine="true"
                android:text="@string/connection_station"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewConnectionStartStationValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/connection_station"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewConnectionStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="40dp"
                android:singleLine="true"
                android:text="@string/connection_time"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewConnectionStartTimeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/connection_time"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewConnectionEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="@string/connection_end"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewConnectionEndStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="40dp"
                android:singleLine="true"
                android:text="@string/connection_station"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewConnectionEndStationValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/connection_station"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewConnectionEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="40dp"
                android:singleLine="true"
                android:text="@string/connection_time"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewConnectionEndTimeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/connection_time"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewCaptureComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/editTextCaptureCommentValue"
            android:singleLine="true"
            android:text="@string/capture_comment"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_text" />

        <EditText
            android:id="@+id/editTextCaptureCommentValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/capture_comment_hint"
            android:inputType="textMultiLine|textAutoCorrect|textAutoComplete|textNoSuggestions"
            android:gravity="top|left"
            android:textColor="@android:color/primary_text_light_nodisable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonCaptureOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bar_button"
                android:text="@string/ok"
                android:textColor="@color/btn_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>