<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/subtitle_background"
        android:paddingLeft="@dimen/subtitle_paddingX" >

        <ImageView
            android:id="@+id/imageViewSettingsSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/settings_sub_tilte"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/textViewSettingsSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/subtitle_paddingY"
            android:paddingLeft="@dimen/subtitle_paddingX"
            android:paddingRight="@dimen/subtitle_paddingX"
            android:paddingTop="@dimen/subtitle_paddingY"
            android:text="@string/settings_sub_tilte"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/subtitle_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textViewDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/settings_delay"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewOnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:labelFor="@+id/editTextOnTime"
                android:minWidth="125dp"
                android:text="@string/settings_delay_on_time"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewOnTimeLt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="10dp"
                android:text="@string/settings_lt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editTextOnTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/settings_min_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light" >
            </EditText>

            <TextView
                android:id="@+id/textViewOnTimeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="10dp"
                android:text="@string/settings_min"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewSlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:labelFor="@+id/editTextSlight"
                android:minWidth="125dp"
                android:text="@string/settings_delay_slight"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewSlightLt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="10dp"
                android:text="@string/settings_lt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editTextSlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/settings_min_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light" >
            </EditText>

            <TextView
                android:id="@+id/textViewSlightMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="10dp"
                android:text="@string/settings_min"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:labelFor="@+id/editTextLate"
                android:minWidth="125dp"
                android:text="@string/settings_delay_late"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewLateLt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="10dp"
                android:text="@string/settings_lt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editTextLate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/settings_min_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light" >
            </EditText>

            <TextView
                android:id="@+id/textViewLateMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="10dp"
                android:text="@string/settings_min"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewExtrem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:labelFor="@+id/editTextExtrem"
                android:minWidth="125dp"
                android:text="@string/settings_delay_extrem"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewExtremGe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="10dp"
                android:text="@string/settings_ge"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editTextExtrem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/settings_min_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light" >
            </EditText>

            <TextView
                android:id="@+id/textViewExtremMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="10dp"
                android:text="@string/settings_min"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonConnectionCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bar_button"
                android:onClick="onOk"
                android:text="@string/ok"
                android:textColor="@color/btn_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>